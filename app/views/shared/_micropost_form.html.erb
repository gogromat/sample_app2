<%= form_for @micropost do |f|%>
    <%= render 'shared/error_messages', object: f.object %>
    <div class="field">
      <%= f.text_area :content, placeholder: "Compose new micropost..." %>
    </div>
    <div class="nowrap">
      <%= f.submit "Post", class: "btn btn-large btn-primary" %><span id="micropost_length"></span>
    </div>

<% end %>